{
  "name": "tinkerwp",
  "displayName": "TinkerWP",
  "description": "WordPress PHP Tinker for VS Code",
  "version": "0.0.1",
  "publisher": "WPBrewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tinkerwp.git"
  },
  "license": "MIT",
  "keywords": [
    "wordpress",
    "php",
    "tinker",
    "debug",
    "woocommerce"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tinkerwp.newFile",
        "title": "TinkerWP: New PHP File",
        "category": "TinkerWP"
      },
      {
        "command": "tinkerwp.run",
        "title": "TinkerWP: Run PHP Code",
        "category": "TinkerWP"
      },
      {
        "command": "tinkerwp.saveSnippet",
        "title": "TinkerWP: Save as Snippet",
        "category": "TinkerWP"
      },
      {
        "command": "tinkerwp.loadSnippet",
        "title": "TinkerWP: Load Snippet",
        "category": "TinkerWP"
      }
    ],
    "keybindings": [
      {
        "command": "tinkerwp.run",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == php"
      }
    ],
    "configuration": {
      "title": "TinkerWP",
      "properties": {
        "tinkerwp.wordpressPath": {
          "type": "string",
          "default": "",
          "description": "Path to WordPress installation"
        },
        "tinkerwp.showDetailLog": {
          "type": "boolean",
          "default": false,
          "description": "Show detailed execution logs"
        },
        "tinkerwp.enableTableView": {
          "type": "boolean",
          "default": false,
          "description": "Enable table view for array/object output"
        },
        "tinkerwp.snippetsFolder": {
          "type": "string",
          "default": "snippets",
          "description": "Folder name for saved snippets (relative to .tinkerwp)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "requirements": {
    "psysh": "^0.11.0"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0"
  }
} 