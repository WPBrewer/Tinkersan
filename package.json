{
  "name": "tinkersan",
  "displayName": "Tinkersan",
  "description": "PHP Tinker for VS Code - Test and debug WordPress, Laravel, and any PHP application",
  "version": "0.0.1",
  "publisher": "WPBrewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tinkersan.git"
  },
  "license": "MIT",
  "keywords": [
    "wordpress",
    "php",
    "laravel",
    "tinker",
    "debug",
    "woocommerce"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tinkersan.newFile",
        "title": "Tinkersan: New PHP File",
        "category": "Tinkersan"
      },
      {
        "command": "tinkersan.run",
        "title": "Tinkersan: Run PHP Code",
        "category": "Tinkersan"
      },
      {
        "command": "tinkersan.saveSnippet",
        "title": "Tinkersan: Save as Snippet",
        "category": "Tinkersan"
      },
      {
        "command": "tinkersan.saveSelectionAsSnippet",
        "title": "Save Selection as Tinkersan Snippet",
        "category": "Tinkersan"
      },
      {
        "command": "tinkersan.loadSnippet",
        "title": "Tinkersan: Load Snippet",
        "category": "Tinkersan"
      }
    ],
    "keybindings": [
      {
        "command": "tinkersan.run",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == php"
      }
    ],
    "configuration": {
      "title": "Tinkersan",
      "properties": {
        "tinkersan.projectPath": {
          "type": "string",
          "default": "",
          "description": "Path to the PHP project (WordPress, Laravel, or custom PHP project)"
        },
        "tinkersan.framework": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "WordPress", "Laravel", "PHP"],
          "enumDescriptions": [
            "Auto-detect the framework from the project structure",
            "WordPress-specific environment",
            "Laravel-specific environment",
            "Generic PHP environment with composer support"
          ],
          "description": "The PHP framework to use for code execution"
        },
        "tinkersan.showDetailLog": {
          "type": "boolean",
          "default": false,
          "description": "Show detailed execution logs"
        },
        "tinkersan.enableTableView": {
          "type": "boolean",
          "default": false,
          "description": "Enable table view for array/object output"
        },
        "tinkersan.snippetsFolder": {
          "type": "string",
          "default": "snippets",
          "description": "Folder name for saved snippets (relative to .tinkersan)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && editorLangId == php",
          "command": "tinkersan.saveSelectionAsSnippet",
          "group": "Tinkersan"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "requirements": {
    "psysh": "^0.11.0"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0"
  }
} 